<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:macro name="test_1_ros2_control" params="name initial_positions_file">
        <xacro:property name="initial_positions" value="${xacro.load_yaml(initial_positions_file)['initial_positions']}"/>

        <ros2_control name="${name}" type="system">
            <hardware>
                <!-- By default, set up controllers for simulation. This won't work on real hardware -->
                <plugin>mock_components/GenericSystem</plugin>
            </hardware>
            <joint name="Revolute_5_1">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['Revolute_5_1']}</param>
                </state_interface>
            </joint>
            <joint name="Revolute_3_1">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['Revolute_3_1']}</param>
                </state_interface>
            </joint>
            <joint name="Fastened_5_1">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['Fastened_5_1']}</param>
                </state_interface>
            </joint>
            <joint name="Revolute_7">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['Revolute_7']}</param>
                </state_interface>
            </joint>
            <joint name="Revolute_5">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['Revolute_5']}</param>
                </state_interface>
            </joint>
            <joint name="Revolute_3">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['Revolute_3']}</param>
                </state_interface>
            </joint>
            <joint name="Revolute_2">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['Revolute_2']}</param>
                </state_interface>
            </joint>
            <joint name="Revolute_1">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['Revolute_1']}</param>
                </state_interface>
            </joint>

        </ros2_control>
    </xacro:macro>
</robot>
